@model IEnumerable<Football_Tickets.Models.Payment>

@{
    ViewData["Title"] = "Ticket Payments";
}

<div class="container mt-4">
    <h2 class="text-center mb-4" id="typing-effect" style="color:#e83232;"></h2>

    <script>
        // تحديد العنصر الذي سيظهر فيه التأثير
        const textElement = document.getElementById("typing-effect");

        // النص الذي نريد كتابته
        const text = "Payment Details";

        // ضبط المؤشر
        let i = 0;
        const speed = 150; // سرعة الكتابة (بالملي ثانية)

        // دالة للكتابة حرف بحرف
        function typeWriter() {
            if (i < text.length) {
                textElement.innerHTML += text.charAt(i); // إضافة الحرف التالي
                i++;
                setTimeout(typeWriter, speed); // استدعاء الدالة مرة أخرى بعد فترة
            }
        }

        // بدء الكتابة عند تحميل الصفحة
        window.onload = typeWriter;
    </script>



    <table class="table table-hover">
        <thead>
            <tr class="table-active" style="background-color:#003366;">
                <th style="color:white;">Ticket Number</th>
                <th style="color:white;">Payment Date</th>
                <th style="color:white;">Payment Method</th>
                <th style="color:white;">Amount</th>
            </tr>
        </thead>
        <tbody style="background-color:gray">
            @foreach (var item in Model)
            {
                <tr class="table-dark">
                    <td>
                        @Html.DisplayFor(modelItem => item.Ticket.TicketId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Method)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table thead {
        background-color: #343a40;
        color: #fff;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-success {
        font-size: 1.2rem;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .table td, .table th {
        padding: 15px;
    }

    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
