
<div class="container-fluid mt-5">
    <!-- العنوان الرئيسي -->
    <h1 class="text-center display-4">
        <div class="d-flex justify-content-center align-items-center">
            <div class="text-center">
                <img src="~/Logo_Teams/@Model.HomeTeam.LogoUrl" alt="@Model.HomeTeam.TeamName Logo" class="img-fluid" style="max-width: 100px;" />
                <h3>@Model.HomeTeam.TeamName</h3>
            </div>
            <span class="mx-4" style="font-size: 2rem;">vs</span>
            <div class="text-center">
                <img src="~/Logo_Teams/@Model.AwayTeam.LogoUrl" alt="@Model.AwayTeam.TeamName Logo" class="img-fluid" style="max-width: 100px;" />
                <h3>@Model.AwayTeam.TeamName</h3>
            </div>
        </div>
    </h1>

    <!-- تفاصيل المباراة -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="text-center">
                <p><strong>Match Date:</strong> @Model.MatchDate.ToString("MMMM dd, yyyy")</p>
                <p><strong>Stadium:</strong> @Model.Stadium.Name</p>
                <p><strong>Stadium Capacity:</strong> @Model.Stadium.Capacity</p>
            </div>
        </div>
    </div>

    <!-- نموذج اختيار القسم -->
    <h2 class="text-center mt-5">Select Section</h2>
    <form id="sectionForm" class="w-50 mx-auto">
        <input type="hidden" name="MatchId" value="@Model.MatchId" />
        <div class="form-group">

            <label for="section" class="form-label h5">Select Section</label>
            <select id="section" name="section" class="form-select form-select-lg" required>
                @* @foreach (var item in (List<Section>)) *@
                <option value="Section1">Section 1 - $@Model.Section1Price</option>
                <option value="Section2">Section 2 - $@Model.Section2Price</option>
                <option value="Section3">Section 3 - $@Model.Section3Price</option>
            </select>
        </div>
        <br />
        <div class="d-flex justify-content-end">
            <button type="button" id="confirmSectionBtn" class="btn btn-secondary btn-lg">Confirm Section</button>
        </div>
    </form>


    <!-- نموذج الحجز -->
    <h2 class="text-center mt-5">Book a Ticket</h2>
    <form asp-action="AddToCart" asp-controller="Cart" method="post" class="w-50 mx-auto">
        <input type="hidden" name="MatchId" value="@Model.MatchId" />

        <div class="form-group">
            <label for="seatNumber" class="form-label h5">Enter Seat Number</label>
            <input type="number" id="seatNumber" name="SeatNumber" class="form-control form-control-lg" required />
        </div>
        <br />
        <div class="d-flex justify-content-between align-items-center">
            <div class="form-group">
                <label for="count" class="form-label h5">Ticket Count</label>
                <input type="number" id="count" name="count" class="form-control form-control-lg" value="1" min="1" required />
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Book Ticket</button>
        </div>
    </form>
</div>
<script>
        document.getElementById('confirmSectionBtn').addEventListener('click', function () {
        const section = document.getElementById('section').value;

        // إرسال طلب Ajax إلى السيرفر
        fetch(`/Cart/Index?MatchId=${@Model.MatchId}&section=${section}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.text())
        .then(html => {
            // تحديث الصفحة بالمحتوى الجديد
            document.body.innerHTML = html;
            toastr.success('Section updated successfully!');
        })
        .catch(error => {
            console.error('Error:', error);
            toastr.error('An error occurred!');
        });
    });

</script>
