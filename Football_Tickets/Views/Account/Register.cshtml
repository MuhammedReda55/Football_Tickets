@model Football_Tickets.Models.ViewModels.ApplicationUserVM

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
     <h3 class="cut-head">Registeration form</h3>
        <div class="col-md-6">

            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <!--<h3>Register</h3>  -->
                </div>
                <div  class="form-style">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <img src="~/Images/userlogo.jfif" width="16px" />


                            <label asp-for="UserName" class="form-label text-color"></label>
                            <input asp-for="UserName" class="form-control input-style input:focus" placeholder="Enter your name." />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <img src="~/Images/Gimal.jfif" width="16px" />

                     
                            <label asp-for="Email" class="form-label text-color "></label>
                            <input asp-for="Email" type="email" class="form-control input-style" placeholder="Enter your Email."/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <img src="~/Images/password icon.jfif" width="16px" />

                            <label asp-for="Password" class="form-label text-color "></label>
                            <input asp-for="Password" type="password" class="form-control input-style" placeholder="Enter your password."/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <img src="~/Images/password icon.jfif" width="16px" />

                            <label asp-for="ConfirmPassword" class="form-label text-color "></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control input-style" placeholder="Confirm your password."/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <img src="~/Images/userlogo.jfif" width="16px" />

                            <label asp-for="Name" class="form-label text-color "></label>
                            <input asp-for="Name" class="form-control input-style" placeholder="Enter your Name." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <img src="~/Images/Address.png" width="16px" />

                            <label asp-for="Address" class="form-label text-color "></label>
                            <input asp-for="Address" class="form-control input-style"placeholder="Enter your Address." />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit"  class="custom-register-button">Register</button>
                        </div>
                    </form>
                    <form id="external-account" asp-action="ExternalLogin" method="post" class="form-horizontal">
                        <div class="button-style">
                            <p>
                                @foreach (var provider in ViewBag.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary buuton-register-style" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">

                                        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 48 48">
                                            <path fill="#fbc02d" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12	s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20	s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                                            <path fill="#e53935" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039	l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                                            <path fill="#4caf50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36	c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path>
                                            <path fill="#1565c0" d="M43.611,20.083L43.595,20L42,20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571	c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
                                        </svg>          @provider.DisplayName
                                    </button>
                                }
                            </p>
                        </div>
                    </form>

                </div>
                <div class="card-footer text-center">
                    <p  class="user-account">Already have an account?</p>
                    <a href="/Account/Login" class="text-primary text-decoration-none custom-login-butt">Login</a>
                </div>
            </div>
        </div>
        <!-- النصف الأيمن للصورة -->
        <div class="col-md-6">
            <img src="~/Images/champion.jpg" class="img-fluid custom-img" alt="Image" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
