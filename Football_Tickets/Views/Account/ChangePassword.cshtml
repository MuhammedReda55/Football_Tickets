@model Football_Tickets.Models.ViewModels.ChanagePasswordVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex justify-content-center align-items-center vh-100 changePasswordpage">
    <div class="card shadow-lg p-2 changePasswordForm" style="">
        <div class="mb-3 text-center">
            <img id="profilePhoto" src="~/Photo_Users/@UserManager.GetUserAsync(User).Result.photo" class="rounded-circle" width="150px" height="150px" style="object-fit: cover; border: 2px solid #007bff;" />
            <p class="pageTitle ">Change password</p>
        </div>

        <form asp-action="ChangePassword" method="post">
            <!-- عرض أخطاء النموذج -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Old Password Field -->
            <div class="form-group mb-3  ">
                
                <input asp-for="OldPassword" class="form-control form-control-lg labalName" type="password" placeholder="Enter old password" required style="border-radius: 10px;" />
                <span asp-validation-for="OldPassword" class="text-danger d-block"></span>
            </div>

            <!-- New Password Field -->
            <div class="form-group mb-3">
                
                <input asp-for="NewPassword" class="form-control form-control-lg labalName" type="password" placeholder="Enter new password" required style="border-radius: 10px;" />
                <span asp-validation-for="NewPassword" class="text-danger d-block"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-group mb-3">
                
                <input asp-for="ConfirmPassword" class="form-control form-control-lg labalName" type="password" placeholder="Confirm password" required style="border-radius: 10px;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg btn-block labalName " style="border-radius: 10px; background-color:#39cbfb36 !important;">Change password</button>
            </div>
        </form>

        <!-- Link to go back -->
        <div class="text-center mt-2  backToHome justify-content-center " >
            <a asp-action="Index" class="btn btn-link text-decoration-none fw-bold ">Home page</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
