@model Football_Tickets.Models.ViewModels.ChanagePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 500px; border-radius: 15px;">
        <h2 class="text-center mb-4 text-primary">تغيير كلمة المرور</h2>

        <form asp-action="ChangePassword" method="post">
            <!-- عرض أخطاء النموذج -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Old Password Field -->
            <div class="form-group mb-4">
                <label asp-for="OldPassword" class="form-label">كلمة المرور القديمة</label>
                <input asp-for="OldPassword" class="form-control form-control-lg" type="password" placeholder="أدخل كلمة المرور القديمة" required style="border-radius: 10px;" />
                <span asp-validation-for="OldPassword" class="text-danger d-block"></span>
            </div>

            <!-- New Password Field -->
            <div class="form-group mb-4">
                <label asp-for="NewPassword" class="form-label">كلمة المرور الجديدة</label>
                <input asp-for="NewPassword" class="form-control form-control-lg" type="password" placeholder="أدخل كلمة المرور الجديدة" required style="border-radius: 10px;" />
                <span asp-validation-for="NewPassword" class="text-danger d-block"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور الجديدة</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="تأكيد كلمة المرور" required style="border-radius: 10px;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" style="border-radius: 10px;">تغيير كلمة المرور</button>
            </div>
        </form>

        <!-- Link to go back -->
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link">عودة إلى الصفحة الرئيسية</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
