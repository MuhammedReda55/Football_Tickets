@model Football_Tickets.Models.Cart

<h2>Edit Seat & Section</h2>

<form asp-action="EditSeat" asp-controller="Cart" method="post">
    <input type="hidden" asp-for="MatchId" />

    <div class="form-group">
        <label for="SeatNumber">Seat Number:</label>
        <input type="number" asp-for="SeatNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="section">Select Section:</label>
        @Html.DropDownListFor(model => model.section,
                 new SelectList(new[] { "Section1", "Section2", "Section3" }),
                 "Select a Section",
                 new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary">Cancel</a>
</form>

