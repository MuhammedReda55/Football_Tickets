@model IEnumerable<Football_Tickets.Models.Stadium>
@section Scripts {
    @if (TempData["message"] != null)
    {
        <script>
            toastr.success('@TempData["message"]');
        </script>
    }
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-primary fw-bold" style="color:#e83232">
        <i class="bi bi-house-door-fill"></i> Stadiums
    </h1>


    <p class="text-end">
        <a asp-action="Create" class="btn btn-success shadow">➕ Create New Stadium</a>
    </p>

    <div class="row g-4">
        @foreach (var stadium in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg rounded" style="background-color:#003366; color: #f8f9fa;">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #ff4b5c;">@stadium.Name</h5>
                        <p class="card-text"><i class="bi bi-geo-alt-fill" style="color: #66ccff;"></i> @stadium.Location</p>
                        <p class="card-text"><i class="bi bi-people-fill" style="color: #99ff99;"></i> Capacity: @stadium.Capacity</p>
                        <h6 style="color: #66ccff;">Teams:</h6>
                        @if (stadium.Teams.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var item in stadium.Teams)
                                {
                                    <li><i class="bi bi-shield-fill" style="color: #ffcc00;"></i> @item.TeamName</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No Team</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

